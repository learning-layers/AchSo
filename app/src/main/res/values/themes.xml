<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
        Better toolbar styles adapted from Lucas Urbas's Medium post.
        https://medium.com/@lucasurbas/making-android-toolbar-responsive-2627d4e07129
     -->
    <style name="Theme.Custom"
        parent="Theme.AppCompat.Light.NoActionBar">

        <item name="windowActionModeOverlay">true</item>

        <item name="colorPrimary">@color/teal_800</item>
        <item name="colorPrimaryDark">@color/teal_900</item>
        <item name="colorAccent">@color/red_A400</item>

        <item name="actionModeStyle">@style/Widget.Custom.ActionMode</item>
        <item name="actionModeBackground">?attr/colorPrimary</item>
        <item name="actionModeCloseButtonStyle">@style/Widget.Custom.ActionButton.CloseMode</item>

        <item name="actionBarStyle">@style/Widget.Custom.Actionbar</item>
        <item name="actionOverflowButtonStyle">@style/Widget.Custom.ActionButton.Overflow</item>

        <!-- For the action mode popup, despite the name -->
        <item name="actionBarPopupTheme">@style/Theme.Custom.Toolbar.Popup</item>

        <item name="toolbarStyle">@style/Widget.Custom.Toolbar</item>

        <item name="toolbarNavigationButtonStyle">
            @style/Widget.Custom.Toolbar.Button.Navigation
        </item>

    </style>

    <style name="Theme.Custom.Toolbar"
        parent="Theme.Custom">

        <item name="android:textColorPrimary">@color/bright_foreground_material_dark</item>
        <item name="android:textColorSecondary">@color/dim_foreground_material_dark</item>
        <item name="android:textColorHint">@color/hint_foreground_material_dark</item>

        <item name="colorControlNormal">@color/bright_foreground_material_dark</item>
        <item name="colorControlHighlight">@color/ripple_material_dark</item>

    </style>

    <style name="Theme.Custom.Toolbar.Popup"
        parent="Theme.AppCompat.Light" />

</resources>
