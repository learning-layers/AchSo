<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/videoPlayerFragment"
        android:name="fi.aalto.legroup.achso.playback.VideoPlayerFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_video_player" />

    <RelativeLayout
        android:id="@+id/controlsOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/partial_toolbar" />

        <include
            layout="@layout/partial_playback_controls"
            android:id="@+id/playbackControls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />

        <ViewStub
            android:layout="@layout/partial_annotation_controls"
            android:id="@+id/annotationControls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

</FrameLayout>
