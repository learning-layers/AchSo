<?xml version="1.0" encoding="utf-8"?>
<view xmlns:android="http://schemas.android.com/apk/res/android"
    class="fi.aalto.legroup.achso.view.VideoGridItemView"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/view"
    android:padding="3dp"
    android:paddingBottom="0dp">

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:id="@+id/item_video_background"
    android:background="#ffffffff">

    <View
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:id="@+id/item_video_genre_border"
        android:background="@color/achso_green"
        />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="fill_parent"
            android:id="@+id/item_video_thumbnail"
            android:layout_weight="0"
            android:layout_gravity="center_vertical"
            android:src="@android:drawable/sym_def_app_icon"
            android:adjustViewBounds="false"
            android:scaleType="centerCrop" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/progress_container"
            android:background="#a0000000"
            android:visibility="gone">

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/progress_bar" />
        </FrameLayout>

    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="32dp"
        android:layout_weight="0"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|top"
        android:paddingTop="10dp"
        android:background="@color/achso_green"
        android:id="@+id/item_video_genre_color"
        android:layout_marginRight="18dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/item_video_cloud"
            android:src="@drawable/md_cloud"
            android:adjustViewBounds="false"
            android:layout_weight="1"
            android:scaleType="fitStart" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/item_video_sd"
            android:src="@drawable/md_sim"
            android:layout_weight="1"
            android:scaleType="fitStart" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginRight="12dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Video Title"
            android:id="@+id/item_video_title"
            android:layout_marginBottom="4dp"
            android:textColor="#ff333333" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Genre"
            android:id="@+id/item_video_genre"
            android:textColor="@color/achso_green" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Video User"
            android:id="@+id/item_video_user" />
    </LinearLayout>

</LinearLayout>






</view>